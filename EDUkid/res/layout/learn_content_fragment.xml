<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/learnmodeback"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    <TextView
        android:id="@+id/learnContentWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/learnContentImage"
        android:layout_alignRight="@+id/learnContentImage"
        android:layout_below="@+id/learnContentImage"
        android:gravity="center"
        android:text="Apple"
        android:textSize="48sp" />

    <ImageButton
        android:id="@+id/learnContentGridButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="onShowGridClick"
        android:src="@android:drawable/ic_dialog_dialer" />

    <ImageButton
        android:id="@+id/learnContentImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="119dp"
        android:src="@android:drawable/ic_menu_gallery" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/learnContentItem"
        android:layout_marginBottom="96dp"
        android:src="@drawable/powder_puff_girls" />

    <TextView
        android:id="@+id/learnContentItem"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignBottom="@+id/learnContentWord"
        android:layout_marginRight="32dp"
        android:layout_toLeftOf="@+id/learnContentGridButton"
        android:gravity="center"
        android:text="A"
        android:textSize="128sp" />

</RelativeLayout>